<resources>
    <style name="Theme.Naiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/med_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/med_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/main_bg_gray</item>
        <item name="android:statusBarColor">@color/main_bg_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InitialScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/med_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DetailTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/med_blue</item>
        <item name="android:windowBackground">@color/main_bg_gray</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Font Section-->
    <style name="FontH6">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontH5">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FontSubtitle1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSubtitle2">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="FontCaptionMedium" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="FontOverline">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FontBody2">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="FontBody1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!--    Style Section-->
    <style name="DialogButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DetailTabStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>